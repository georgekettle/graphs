<%= render 'components/header', header: 'New task' %>
<%= simple_form_for @task do |f| %>
  <%= f.input :name %>
  <% if @task.start %>
    <%= f.input :start, :as => :string, :input_html => { :value => localize(f.object.start), id: 'flatpickr-datetime' } %>
  <% else %>
    <%= f.input :start, :as => :string, :input_html => { id: 'flatpickr-datetime' } %>
  <% end %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
