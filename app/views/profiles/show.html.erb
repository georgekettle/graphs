<div class="profile">
  <div class="profile-cover">

  </div>

  <div class="avatar-large profile-avatar">
    <%= cl_image_tag(@profile.avatar.key) if @profile.avatar.attached? %>
  </div>

  <h3><%= current_user.profile.full_name %></h3>
  <div class="contact-options">
    <%= link_to '#', class: "contact-link instagram" do %>
      <%= render 'icons/instagram' %>
    <% end %>
    <%= link_to '#', class: "contact-link facebook" do %>
      <%= render 'icons/facebook' %>
    <% end %>
    <%= link_to '#', class: "contact-link phone" do %>
      <%= render 'icons/phone' %>
    <% end %>
    <%= link_to '#', class: "contact-link email" do %>
      <%= render 'icons/email' %>
    <% end %>
  </div>
  <!-- <p><%= current_user.profile.bio %></p> -->
  <% if @profile.user == current_user %>
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-primary' %>
    <%= link_to 'Edit profile', edit_profile_path(@profile), class: 'btn' %>
  <% end %>
</div>
